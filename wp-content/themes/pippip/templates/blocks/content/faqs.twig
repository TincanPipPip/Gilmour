{#
/**
 * Block Name: FAQs
 */
#}

<section class="a-bleed a-module md-faqs {% if fields.branding %}brand--{{ fields.branding|lower }}{% endif %}">
  {% include '/blocks/partial/intro.twig' with {
    content: {
      title: fields.title,
      copy: fields.copy
    }
  } %}

  <div class="grid justify-center">
    <div class="col-sm-10">
      
      <div class="js-accordion">
        {% for row in fields.faqs %}
          <h3 class="js-accordion__header">{{ row.question }}</h3>
          <div class="js-accordion__panel">
            {{ row.answer }}
          </div>
        {% endfor %}
      </div>

    </div>
  </div>

  {% include '/blocks/partial/intro.twig' with {
    content: {
      copy: fields.extra_copy,
      buttonLink: fields.button.url,
      buttonLabel: fields.button.title
    },
    introClasses: [
      'col-sm-8',
      'col-md-6',
      'col-lg-4',
      'col-bleed',
      'md-faqs__extra'
    ]
  } %}

</section>