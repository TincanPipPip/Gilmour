{#
/**
 * Block Name: Page Header module
 */
#}

<section class="md-banner{% if fields.homepage_banner == true %} md-banner--home{% endif %}{% if fields.add_image_overlay == true %} a-overlay{% endif %} {% if fields.invert_text_colour == true %}md-banner--invert{% endif %}">

  {# TODO image sizes #}
  <picture>
    <source media="(max-width: 600px)" srcset="{{ post.thumbnail.src }}" type="image/jpeg">
    <source media="(max-width: 1000px)" data-srcset="{{ post.thumbnail.src }}" type="image/jpeg">
    <source data-srcset="{{ post.thumbnail.src }}" type="image/jpeg">
    <img data-src="{{ post.thumbnail.src }}" alt="{{ post.thumbnail.alt }}" class="lazy" />
  </picture>

  <div class="md-banner__inner">
    <div class="grid">
      <div class="col-sm-10 col-md-8">
          
        <h1>{{ post.title }}</h1>

        {% if fields.strapline %}
          {{ fields.strapline }}
        {% endif %}

      </div>
    </div>
  </div>

</section>
